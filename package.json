{
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle --outfile=lib.js --format=esm lib.ts",
    "build:watch": "esbuild --bundle --outfile=lib.js --format=esm --watch lib.ts",
    "build:serve": "esbuild --bundle --serve --outfile=lib.js --format=esm --watch lib.ts --servedir=."
  },
  "devDependencies": {
    "esbuild": "^0.19.3",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
